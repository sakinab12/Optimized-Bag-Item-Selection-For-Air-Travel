<!DOCTYPE html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/add_bag_items.js"></script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="card mx-auto" style="width: 30rem; margin: 10rem">
        <div class="card-body mb-3">
            <form id="addBagItemForm">
                <label for="bagItemName" class="form-label">Bag Item Name</label>
                <input type="text" id="bagItemName" class="form-control">
        
                <label for="bagItemWorth" class="form-label">Bag Item Worth</label>
                <input type="text" id="bagItemWorth" class="form-control">
        
                <label for="bagItemWeight" class="form-label">Bag Item Weight</label>
                <input type="text" id="bagItemWeight" class="form-control">

                <div class="col-auto mb-3">
                    <button  class="btn btn-secondary mt-3 w-100 p-1" type="submit" name="bagItemAdd" id="bagItemAdd">Add Bag Item</button>  

                </div> 
            </form>
        
            <table id="bagItemsTable" class="table table-striped w-100">
                <tr>
                    <th>Item Name</th>
                    <th>Worth</th>
                    <th>Weight</th>
                </tr>

            </table>
            <form method="post" action="/optimumBag">
                <label for="capacity" class="form-label">
                    Type of Travel:
                </label>
                <select name="capacity" id="capacity" class="form-select">
                    <option value="15">Domestic</option>
                    <option value="30">International</option>
                </select>
                <div class="col-auto">
                    <button  class="btn btn-primary mt-3 w-100 p-1" name="optimumBagSubmit" id="optimumBagSubmit">Get Optimum Bag Item Selection</button>  
                </div>
            </form>

            <br>
            <br>

            <table id="bagOptimizedItemsTable" class="table table-striped w-100">

            </table>
        </div>
    </div>
    
</body>